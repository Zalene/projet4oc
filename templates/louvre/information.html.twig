{% extends "base.html.twig" %}

{% form_theme formStep2 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class='menu-order'>
        <ul class="nav nav-tabs">
            <div class='row'>
                <li class="nav-item mx-auto col-xs-4">
                    <a class="nav-link" data-toggle="tab" href="#home">Commande</a>
                </li>
                <li class="nav-item mx-auto col-xs-4">
                    <a class="nav-link disabled" href="#">Paiement</a>
                </li>
                <li class="nav-item mx-auto col-xs-4">
                    <a class="nav-link disabled" href="#">Confirmation</a>
                </li>
            </div>
        </ul>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width: 66%"></div>
        </div>
    </div>

    <h1>Information de chaque billets</h1>

    {{ form_start(formStep2) }}

    {{ form_row(formStep2.lastname, {'label' : 'Nom', 'attr' : {'placeholder' : 'Nom'}}) }}
    {{ form_row(formStep2.name, {'label' : 'Prénom', 'attr' : {'placeholder' : 'Prénom'}}) }}
    {{ form_row(formStep2.birthdayDate, {'label' : 'Date de naissance'}) }}
    {{ form_row(formStep2.save, {'label' : 'Envoyer'}) }}

    <button type="button" class="btn btn-info">Info</button>

    {{ form_end(formStep2) }}

</div>
{% endblock %}
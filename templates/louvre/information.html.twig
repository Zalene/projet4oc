{% extends "base.html.twig" %}

{% form_theme formStep2 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class='menu-order'>
        <ul class="nav nav-tabs row">
            <li class="nav-item mx-auto col-xs-4">
                <a class="nav-link" data-toggle="tab" href={{ path('order_step_1') }}>Commande</a>
            </li>
            <li class="nav-item mx-auto col-xs-4">
                <a class="nav-link active" data-toggle="tab" href="#home">Informations</a>
            </li>
            <li class="nav-item mx-auto col-xs-4">
                <a class="nav-link disabled" href="#">Paiement</a>
            </li>
            <li class="nav-item mx-auto col-xs-4">
                <a class="nav-link disabled" href="#">Confirmation</a>
            </li>
        </ul>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
        </div>
    </div>

    <div class='row'>
        <div class='col-sm-12 col-md-9'>
            <div class="alert alert-dismissible alert-warning col-xs-12">
                <p class="mb-0">Pour les tarifs réduits (étudiants, militaire, employé de musée, employé d'un service du ministère de la culture ...) , un justificatif vous sera demander le jour de la visite.</p>
            </div>

            <div class='col-xs-12'>
                <h3>Vos billets</h3>
            </div>

            {{ form_start(formStep2) }}
            <div class='row'>
                <div class='col-sm-12 col-md-6'>
                    {{ form_row(formStep2.firstname, {'label' : 'Nom', 'attr' : {'placeholder' : 'Nom'}}) }}
                </div>
                <div class='col-sm-12 col-md-6'>
                    {{ form_row(formStep2.name, {'label' : 'Prénom', 'attr' : {'placeholder' : 'Prénom'}}) }}
                </div>
            </div>
            <div class='row'>
                <div class='col-sm-12 col-md-6'>
                    {{ form_row(formStep2.birthday, {'label' : 'Date de naissance'}) }}
                </div>
                <div class='col-sm-12 col-md-6'>
                    {{ form_row(formStep2.country, {'label' : 'Pays'}) }}
                </div>
            </div>
            <div class='row'>
                <div class='col-sm-12 col-md-6'>
                    {{ form_row(formStep2.reducedPrice, {'label' : 'Tarif réduit'}) }}
                    <p class="text-secondary">* Justificatif nécessaire le jour de la visite</p>
                </div>
            </div>
        </div>

        <div class='card mb-3 col-sm-12 col-md-3'>
            <h5 class="card-header">Votre commande</h5>
            <p>Date de la visite</p>
            <p>Type de billet / voir horaires</p>
            <p>Nombre de billets</p>
            {{ form_row(formStep2.save, {'label' : 'Suivant'}) }}

            {{ form_end(formStep2) }}
        </div>
    </div>
</div>
{% endblock %}
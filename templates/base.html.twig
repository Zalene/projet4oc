<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Musée du Louvre{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link rel="stylesheet" href={{ asset('css/style.css') }}>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href={{ path('accueil') }}>
                    <img src={{ asset('/img/logo-louvre.jpg') }} alt="Logo" style="width:auto;">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('accueil') }}>Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('accueil') }}#hours-block">Horaires</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('accueil') }}#price-block">Tarif</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('accueil') }}#contact-block">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('order_step_1') }}>Réserver un billet</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="https://js.stripe.com/v3/"></script>

            <script type="text/javascript" src={{ asset('js/order.js')}}></script>
        {% endblock %}
    </body>
</html>
